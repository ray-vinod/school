@model IEnumerable<School.Models.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    @*<a asp-action="Create">Create New</a>*@
    <h3>List of Students</h3>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="glyphicons glyphicon-pencil"></i> Edit </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="glyphicons glyphicon-list"></i> Details </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="glyphicons glyphicon-trash"></i> Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
